{
  "name": "frontend-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron-build": "tsc electron/main.ts --outDir electron/dist --module commonjs && mv electron/dist/main.js electron/dist/main.cjs",
    "electron": "npm run electron-build && electron electron/dist/main.cjs",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "build": "tsc -b && vite build",
    "dist": "npm run build && npm run electron-build && electron-builder",
    "lint": "eslint .",
    "mock": "json-server --watch db.json --port 3003",
    "auth": "json-server-auth --watch db.json --port 3003"
  },
  "build": {
    "appId": "com.ssafy.voida",
    "files": [
      "dist/**/*",
      "electron/dist/main.cjs"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@stomp/stompjs": "^7.1.1",
    "axios": "^1.10.0",
    "canvas-confetti": "^1.9.3",
    "cross-env": "^10.0.0",
    "lucide-react": "^0.526.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "express": "^5.1.0",
    "globals": "^16.3.0",
    "json-server": "^1.0.0-beta.3",
    "json-server-auth": "^2.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  }
}
